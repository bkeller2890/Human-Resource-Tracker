@model IEnumerable<HRTracker.Models.LeaveRequest>

<h1>Leave Of Action Requests </h1>
<p>
    <create-button href="@Url.Action("Create","LeaveRequests")" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Employee</th>
            <th>Start</th>
            <th>End</th>
            <th>Type</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@item.LeaveRequestId</td>
            <td>@(item.Employee != null ? item.Employee.FirstName + " " + item.Employee.LastName : item.EmployeeId.ToString())</td>
            <td>@item.StartDate.ToShortDateString()</td>
            <td>@item.EndDate.ToShortDateString()</td>
            <td>@item.LeaveType</td>
            <td>@item.Status</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeaveRequestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LeaveRequestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LeaveRequestId" class="text-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
