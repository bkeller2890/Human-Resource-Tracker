@model HRTracker.Models.LeaveRequest

<h1>Leave Requests</h1>
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.EmployeeId)</dt>
    <dd class="col-sm-10">@(Model.Employee != null ? Model.Employee.FirstName + " " + Model.Employee.LastName : Model.EmployeeId.ToString())</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.StartDate)</dt>
    <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.EndDate)</dt>
    <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.LeaveType)</dt>
    <dd class="col-sm-10">@Model.LeaveType</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Status)</dt>
    <dd class="col-sm-10">@Model.Status</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.CreatedAt)</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Reason)</dt>
    <dd class="col-sm-10">@Model.Reason</dd>
</dl>
<p>
    <a asp-action="Edit" asp-route-id="@Model.LeaveRequestId">Edit</a> |
    <a asp-action="Index">Back to list</a>
</p>
